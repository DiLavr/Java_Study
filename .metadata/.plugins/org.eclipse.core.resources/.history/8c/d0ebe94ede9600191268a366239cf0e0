package chapter_05_Loops;


//(1/3) + (3/5) + (5/7) + (7/9) + (9/11) + (11/13) + .... + (95/97) + (97/99)

public class Lab_05_03 {
    public static void main(String[] args) {
    	
    	    double sum = 0;	
    	for (double i=1; i < 98; i+=2) 
    	{    	sum += i/(i+2)	;    		
    	}
    	   	
    	System.out.printf("%.2f", sum);
    	return;
    	}
    }